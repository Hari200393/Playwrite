const responseTimes = [120, 230, 450, 510, 180, 620];
const SLA_LIMIT     = 500;

let i           = 0;
let minResponse = responseTimes[0];
let maxResponse = responseTimes[0];
let totalTime   = 0;
let breaches    = 0;

while (i < responseTimes.length) {
    const time = responseTimes[i];

    // ── Min & Max Tracking ──
    if (time < minResponse) minResponse = time;
    if (time > maxResponse) maxResponse = time;

    // ── Total for Average ──
    totalTime += time;

    // ── SLA Breach Check ──
    if (time > SLA_LIMIT) breaches++;

    i++;
}

const totalRequests  = responseTimes.length;
const avgResponse    = (totalTime / totalRequests).toFixed(2);
const breachPercent  = ((breaches / totalRequests) * 100).toFixed(2);
const overallStatus  = breaches > 0 ? " SLA VIOLATED" : "SLA MET";

console.log(`Total Requests : ${totalRequests}`);
console.log(`Min Response   : ${minResponse}ms`);
console.log(`Max Response   : ${maxResponse}ms`);
console.log(`Avg Response   : ${avgResponse}ms`);
console.log(`SLA Breaches   : ${breaches} (${breachPercent}%)`);
console.log(`Overall Status : ${overallStatus}`);